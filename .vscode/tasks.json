// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run tests in Docker",
            "type": "shell",
            "command": "make test",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "cpp",
                    "pattern": [
                        {
                            // capture everything after "/simplypp/"
                            // as group 1, then line, col, severity, message
                            "regexp": "^/simplypp/(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ],
                    // treat the captured path as relative to your workspace root
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}"
                    ]
                }
            ]
        }
    ]
}